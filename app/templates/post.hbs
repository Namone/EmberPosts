  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2 col-xs-12">
        <h3>Posts</h3>
        <hr>
        {{#each model as |post|}} <!-- output the content of the actual components -->
        <div class="panel panel-default">
          <div class="panel-heading">
            {{post.title}}
          </div>
          <div class="panel-body">
            {{post.content}}
          </div>
          <div class="panel-footer">
            <button class="btn btn-danger" {{action "deletePost" post}}>Delete</button>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div><!-- /.container -->
